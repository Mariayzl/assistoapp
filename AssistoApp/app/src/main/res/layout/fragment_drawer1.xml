<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004C69"
    tools:context=".Drawer1Fragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tvMapa"
        android:layout_width="143dp"
        android:layout_height="104dp"
        android:gravity="center"
        android:text="Mapa movilidad reducida"
        android:textColor="#FFEB3B"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvMisanuncios"
        app:layout_constraintTop_toBottomOf="@+id/buttonMapa"
        app:layout_constraintVertical_bias="0.172" />

    <TextView
        android:id="@+id/tvMisanuncios"
        android:layout_width="143dp"
        android:layout_height="77dp"
        android:gravity="center"
        android:text="Mis anuncios"
        android:textColor="#FFEB3B"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvMapa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMiperfil"
        app:layout_constraintVertical_bias="0.164" />

    <Button
        android:id="@+id/buttonMapa"
        android:layout_width="139dp"
        android:layout_height="122dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FF9800"
        android:text="Ubicaci贸n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonMiperfil"
        app:layout_constraintTop_toBottomOf="@+id/tvCuidados" />

    <Button
        android:id="@+id/buttonCuidados"
        android:layout_width="139dp"
        android:layout_height="122dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FF9800"
        android:text="Ubicaci贸n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonAsistente"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloAssisto" />

    <TextView
        android:id="@+id/tvCuidados"
        android:layout_width="143dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="Cuidados"
        android:textColor="#FFEB3B"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvAsistente"
        app:layout_constraintTop_toBottomOf="@+id/buttonCuidados" />

    <Button
        android:id="@+id/buttonMiperfil"
        android:layout_width="139dp"
        android:layout_height="122dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FF9800"
        android:text="Ubicaci贸n"
        app:layout_constraintEnd_toStartOf="@+id/buttonMapa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAsistente" />

    <Button
        android:id="@+id/buttonAsistente"
        android:layout_width="139dp"
        android:layout_height="122dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FF9800"
        android:text="Ubicaci贸n"
        app:layout_constraintEnd_toStartOf="@+id/buttonCuidados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloAssisto" />

    <TextView
        android:id="@+id/tvTituloAssisto"
        android:layout_width="376dp"
        android:layout_height="72dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Assisto"
        android:textColor="#FFEB3B"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAsistente"
        android:layout_width="143dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="Asistente"
        android:textColor="#FFEB3B"
        android:textSize="26sp"
        app:layout_constraintEnd_toStartOf="@+id/tvCuidados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAsistente" />


</androidx.constraintlayout.widget.ConstraintLayout>