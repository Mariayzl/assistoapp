<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07305d"
    tools:context=".Drawer2Fragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tvFiltrotexto1"
        android:layout_width="381dp"
        android:layout_height="42dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Encuentra lo que buscas cerca de ti. Utiliza los filtros por ciudad para mejorar sus resultados de búsqueda."
        android:textColor="#FFEB3B"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerviewAsistente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etbusqueda2" />

    <TextView
        android:id="@+id/tvFiltro1"
        android:layout_width="65dp"
        android:layout_height="21dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:text="filtro:"
        android:textColor="#FFEB3B"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/etbusqueda2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvUltimoanuncio1"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloAsistente" />

    <TextView
        android:id="@+id/tvTituloAsistente"
        android:layout_width="266dp"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Asistentes"
        android:textColor="#FFEB3B"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUltimoanuncio1"
        android:layout_width="161dp"
        android:layout_height="24dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Últimos anuncios"
        android:textColor="#FFEB3B"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/etbusqueda2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloAsistente" />

    <EditText
        android:id="@+id/etbusqueda2"
        android:layout_width="354dp"
        android:layout_height="54dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@color/white"
        android:text="búsque campo ..."
        app:layout_constraintBottom_toTopOf="@+id/tvFiltrotexto1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUltimoanuncio1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewAsistente"
        android:layout_width="399dp"
        android:layout_height="311dp"
        android:layout_marginTop="8dp"
        android:background="#07305d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFiltrotexto1" />

    <Button
        android:id="@+id/buttonCrear1"
        android:layout_width="242dp"
        android:layout_height="63dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="76dp"
        android:text="Crear anuncio Asistente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerviewAsistente"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>